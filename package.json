{
  "name": "boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo --no-daemon && exit 0",
    "dev": "turbo run start:dev",
    "lint:check": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{mjs,js,jsx,ts,tsx,json}\"",
    "format:fix": "prettier --write \"**/*.{mjs,js,jsx,ts,tsx,json}\"",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "28.1.8",
    "@types/node": "20.16.5",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@typescript-eslint/utils": "^8.4.0",
    "concurrently": "7.6.0",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.36.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "globals": "^15.9.0",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "lint-staged": "15.2.10",
    "nodemon": "2.0.22",
    "npm-run-all2": "5.0.2",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "rimraf": "3.0.2",
    "serve": "14.2.3",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "turbo": "2.1.2",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.4.0",
    "wait-on": "6.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json",
      "git add"
    ]
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": "20",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=9.6.0"
  }
}
