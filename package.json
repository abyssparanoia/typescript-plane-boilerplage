{
  "name": "boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo --no-daemon && exit 0",
    "dev": "turbo run start:dev",
    "lint": "eslint --fix -c ./.eslintrc.json './packages/**/*.{ts,tsx}'",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/jest": "28.1.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "concurrently": "7.3.0",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.19",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "serve": "14.0.1",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "turbo": "2.0.7",
    "typescript": "5.5.4",
    "wait-on": "6.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json",
      "git add"
    ]
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": "20",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=9.6.0"
  }
}
