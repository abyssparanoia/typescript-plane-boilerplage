{
  "name": "@account-viewer/backend",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "yarn clean",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "NODE_ENV=production node dist/app/bootstrap.js",
    "start:swagger": "IS_SWAGGER_PROCESS=true nodemon --watch ./src --ext ts --exec 'ts-node -r tsconfig-paths/register ./src/swagger/bootstrap.ts'",
    "start:swagger:prod": "node dist/swagger/swagger-ui-server.js",
    "test": "jest",
    "clean": "rimraf dist",
    "format:swagger": "prettier --write swagger.json",
    "migration:generate": "NODE_ENV=development ts-node node_modules/.bin/typeorm -f src/type-orm.option.ts migration:generate",
    "migration:run": "NODE_ENV=development ts-node node_modules/.bin/typeorm -f src/type-orm.option.ts migration:run",
    "migration:run:prod": "NODE_ENV=production ts-node node_modules/.bin/typeorm -f src/type-orm.option.ts migration:run"
  },
  "dependencies": {
    "@nestjs/common": "8.0.5",
    "@nestjs/config": "1.0.1",
    "@nestjs/core": "8.0.5",
    "@nestjs/platform-express": "8.0.5",
    "@nestjs/swagger": "5.0.8",
    "@nestjs/typeorm": "8.0.1",
    "@account-viewer/interface": "0.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "date-fns": "2.23.0",
    "date-fns-tz": "1.1.4",
    "dotenv": "10.0.0",
    "envalid": "7.1.1",
    "express": "4.17.1",
    "generate-password": "1.6.1",
    "mysql": "2.18.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.34",
    "typeorm-transactional-cls-hooked": "0.1.21",
    "uuid": "8.3.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "8.0.5",
    "@types/express": "4.17.13",
    "@types/generate-password": "1.5.0",
    "@types/node": "13.13.51",
    "@types/rimraf": "3.0.1",
    "@types/uuid": "8.3.1",
    "eslint-plugin-prettier": "3.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "12"
  }
}
